{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "isolatedModules": false,
    "jsx": "react-jsx",
    "outDir": "dist-api",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["inngest", "@cloudflare/workers-types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"]
    }
  },
  "include": ["vite.config.ts", "api/**/*", "src/**/*"]
}
