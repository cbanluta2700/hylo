# NPM Configuration for Vercel builds
# Handles optional dependency issues with Rollup native binaries

# Force npm to install optional dependencies
optional=true

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=false

# Increase timeout for slow network connections
fetch-timeout=300000

# Registry configuration
registry=https://registry.npmjs.org/

# Audit configuration
audit-level=moderate

# Fund configuration
fund=false

# Progress configuration for CI
progress=false

# Engine strict configuration
engine-strict=true